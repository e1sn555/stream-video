<ul class='breadcrumb'>
  <li class='breadcrumb-item'><a href='/admin'>Ana səhifə</a></li>
  <li class='breadcrumb-item'><span>Şifrəni yenilə</span></li>
</ul>
<div class='row mt-4'>
  <div class='col-md-10 mx-auto'>
    <h4>
      Şifrəni yenilə
    </h4>
  </div>
  <div class='col-md-10 mt-4 mx-auto'>
    <form action='/admin/update-password' method='post'>
      <div class='form-group'>
        <label for='currentPassword'>Köhnə şifrə</label>
        <input
          id='currentPassword'
          name='currentPassword'
          type='password'
          class='form-control'
          required
        />
        {{#if errorCurrentPassword}}
          <small class='text-danger'>Köhnə şifrə yanlışdır</small>
        {{/if}}
      </div>
      <div class='form-group'>
        <label for='newPassword'>Yeni şifrə</label>
        <input
          id='newPassword'
          name='newPassword'
          type='password'
          class='form-control'
          required
        />
      </div>
      <div class='form-group'>
        <label for='newPasswordConfirm'>Yeni şifrə təkrar</label>
        <input
          id='newPasswordConfirm'
          name='newPasswordConfirm'
          type='password'
          class='form-control'
          required
        />
        {{#if errorNewPassword}}
          <small class='text-danger'>Şifrələr uyğun deyil</small>
        {{/if}}
        {{#if success}}
          <small class='text-success'>Şifrə yeniləndi</small>
        {{/if}}
      </div>
      <div class='form-group d-flex'>
        <button class='btn btn-success'>Yadda saxla</button>
        <a href='/admin' class='btn btn-secondary ml-2'>Geri</a>
      </div>
    </form>
  </div>
</div>